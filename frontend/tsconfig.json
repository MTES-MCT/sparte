{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./types"],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["scripts/components/*"],
            "@hooks/*": ["scripts/hooks/*"],
            "@store/*": ["scripts/store/*"],
            "@services/*": ["scripts/services/*"],
            "@images/*": ["images/*"],
            "@utils/*": ["scripts/utils/*"]
        }
    },
    "include": [
        "**/*",
        "types/globals.d.ts"
    ]
}
