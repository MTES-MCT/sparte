{
  "name": "sparte-export-api",
  "version": "1.0.0",
  "description": "API service for exporting Sparte reports to PDF",
  "main": "dist/api.js",
  "scripts": {
    "build": "tsc",
    "scalingo-postbuild": "tsc && npx puppeteer browsers install chrome",
    "dev": "PORT=3001 ALLOWED_HOSTS=localhost tsx watch src/api.ts",
    "prod": "node dist/api.js",
    "cli": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "puppeteer": "^24.15.0",
    "puppeteer-autoscroll-down": "^2.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
